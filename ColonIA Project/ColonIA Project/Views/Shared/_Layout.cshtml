<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>ColonIA</title>
    <meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=no" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Assets/css/main.css" rel="stylesheet" />


</head>
<body class="is-preload">

    <!-- Wrapper -->
    <div id="wrapper">


        <!-- Contenido -->

        <div id="main">
            @RenderBody()
        </div>

        <!-- Sidebar -->
        <aside id="sidebar">
        <div id="sidebar" class="inactive">
            <div class="inner">

                <!-- Menu -->
                <nav id="menu">
                    <header class="major">
                        <a href="@Url.Action("Index","Home")"><h2>Menu</h2></a>
                    </header>
                    <ul>

                        <!-- Usuario -->
                        <li>
                            <span class="opener">Usuario</span>
                            <ul>
                                <li><a href="@Url.Action("PerfilUsuario", "User")">Perfil</a></li>
                                <li><a href="@Url.Action("UsuariosAdmin", "User")">Administrador</a></li>
                                <li><a href="#">Operador</a></li>
                                <li><a href="#">Supervisor</a></li>
                                <li><a href="#">Control de Calidad</a></li>
                                <li>@Html.Partial("_LoginPartial")</li>
                                <li><a href="@Url.Action("UsuariosSupervisor", "User")">Supervisor</a></li>
                            </ul>
                        </li>

                        <!-- Produccion -->
                        <li>
                            <span class="opener">Producción</span>
                            <ul>

                                <li><a href="@Url.Action("Incubacion", "Produccion")">Incubacion</a></li>
                                <li><a href="@Url.Action("Crianza","Produccion")">Crianza</a></li>
                                <li><a href="@Url.Action("Cosecha","Produccion")">Cosecha</a></li>
                            </ul>
                        </li>

                        <!-- Analisis -->
                        <li>
                            <span class="opener">Análisis</span>
                            <ul>
                                <li><a href="@Url.Action("AnalisisAI", "Analisis")">Vista General</a></li>
                                <li><a href="@Url.Action("AnalisisChat", "Analisis")">Chat</a></li>
                            </ul>
                        </li>

                        <!-- Calidad -->
                        <li>
                            <span class="opener">Calidad</span>
                            <ul>
                                <li><a href="#">Inspección</a></li>
                                <li><a href="#">Resultados</a></li>
                                <li><a href="#">Costos</a></li>
                                <li><a href="#">Finanzas</a></li>
                                <li><a href="@Url.Action("Index","Calidad")">Calidad</a></li>
                                <li><a href="@Url.Action("Index","Contador")">Finanzas</a></li>
                            </ul>
                        </li>

                        <!-- Inventario -->
                        <li>
                            <span class="opener">Inventario</span>
                            <ul>
                                <li><a href="@Url.Action("Recursos","Inventario")">Recursos</a></li>
                                <li><a href="@Url.Action("HistorialRecursos","Inventario")">Historial Recursos</a></li>
                                <li><a href="@Url.Action("HistorialInventario","Inventario")">Historial Invetario</a></li>
                                <li><a href="@Url.Action("Categorias","Inventario")">Categorias</a></li>
                                <li><a href="@Url.Action("AsignarRecurso","Inventario")">Asignar Recurso</a></li>
                            </ul>
                        </li>

                    </ul>
                </nav>

            </div>
        </aside>

    </div>

    <!-- Scripts -->


    <script src="~/Assets/js/jquery.min.js"></script>
    <script src="~/Assets/js/browser.min.js"></script>
    <script src="~/Assets/js/breakpoints.min.js"></script>
    <script src="~/Assets/js/util.js"></script>
    <script src="~/Assets/js/main.js"></script>
    <script src="~/Content/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)

</body>
</html>
