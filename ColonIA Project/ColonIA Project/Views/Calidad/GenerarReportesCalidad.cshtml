@{
    ViewBag.Title = "Reportes de Calidad";
}

<div class="inner">

    <!-- Botón de regreso -->
    <header id="header">
        <a href="@Url.Action("Index", "Calidad")" class="btn btn-success mb-3">
            <i class="fas fa-arrow-left"></i> Volver
        </a>
    </header>

    <!-- Sección principal -->
    <section id="reportes">
        <div class="content">
            <header>
                <h1>Generación de Reportes de Calidad</h1>
                <p>Consulta, visualiza y exporta informes de calidad por fecha o lote.</p>
            </header>

            <!-- Formulario para filtro -->
            <form class="row g-3 mb-4">
                <div class="col-md-4">
                    <label for="fechaInicio" class="form-label">Fecha Inicio</label>
                    <input type="date" class="form-control" id="fechaInicio" name="fechaInicio" />
                </div>
                <div class="col-md-4">
                    <label for="fechaFin" class="form-label">Fecha Fin</label>
                    <input type="date" class="form-control" id="fechaFin" name="fechaFin" />
                </div>
                <div class="col-md-4">
                    <label for="codigoLote" class="form-label">Código de Lote (opcional)</label>
                    <input type="text" class="form-control" id="codigoLote" name="codigoLote" placeholder="Ej. LOTE101" />
                </div>
                <div class="col-12 d-flex justify-content-end">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-file-search"></i> Generar Reporte
                    </button>
                </div>
            </form>

            <!-- Tabla de resultados -->
            <div class="table-responsive">
                <table class="table table-bordered table-striped shadow-sm">
                    <thead class="table-success">
                        <tr>
                            <th>Código de Lote</th>
                            <th>Fecha Inspección</th>
                            <th>Inspector</th>
                            <th>Visual (color, olor, textura)</th>
                            <th>Parámetros Lab (proteína, humedad, etc.)</th>
                            <th>Estado Final</th>
                            <th>Observaciones</th>
                            <th>Acciones Correctivas</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>LOTE101</td>
                            <td>2025-04-04</td>
                            <td>Carla Martínez</td>
                            <td>Color uniforme, sin olores</td>
                            <td>Proteína: 68%<br />Humedad: 6%<br />Metales: No detectado</td>
                            <td><span class="badge bg-success">Aprobado</span></td>
                            <td>Todo en norma</td>
                            <td>No aplica</td>
                        </tr>
                        <!-- Más filas dinámicamente -->
                    </tbody>
                </table>
            </div>

            <!-- Botones de exportación -->
            <div class="mt-4 d-flex justify-content-end gap-2">
                <button class="btn btn-outline-danger">
                    <i class="fas fa-file-pdf"></i> Exportar PDF
                </button>
                <button class="btn btn-outline-success">
                    <i class="fas fa-file-excel"></i> Exportar Excel
                </button>
            </div>

            <!-- Historial de reportes -->
            <div class="mt-5">
                <h4>Historial de Reportes Generados</h4>
                <ul class="list-group">
                    <li class="list-group-item">
                        Reporte generado el 2025-04-03 por Carla Martínez — <a href="#">Ver PDF</a> | <a href="#">Ver Excel</a>
                    </li>
                    <!-- Más ítems -->
                </ul>
            </div>

        </div>
    </section>
</div>

<!-- FontAwesome para íconos -->
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet" />
