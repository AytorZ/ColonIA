@{
    ViewBag.Title = "Comparación de Calidad por Lote";
}

<div class="inner">

    <!-- Encabezado con botón de retorno -->
    <header id="header">
        <a href="@Url.Action("Index", "Calidad")" class="btn btn-success mb-3">
            <i class="fas fa-arrow-left"></i> Volver
        </a>
    </header>

    <!-- Sección principal -->
    <section id="comparacion">
        <div class="content">
            <header>
                <h1>Comparación de Calidad por Lote</h1>
                <p>Selecciona dos o más lotes para comparar sus parámetros de calidad.</p>
            </header>

            <!-- Formulario de selección -->
            <form class="mb-4">
                <div class="mb-3">
                    <label for="lotesSeleccionados" class="form-label">Selecciona los códigos de lote:</label>
                    <select multiple class="form-control" id="lotesSeleccionados" name="lotesSeleccionados">
                        <option value="LOTE101">LOTE101</option>
                        <option value="LOTE102">LOTE102</option>
                        <option value="LOTE103">LOTE103</option>
                        <option value="LOTE104">LOTE104</option>
                        <!-- Opciones dinámicas -->
                    </select>
                    <small class="form-text text-muted">Mantén presionada la tecla Ctrl (o Cmd en Mac) para seleccionar varios.</small>
                </div>
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-balance-scale"></i> Comparar Lotes
                </button>
            </form>

            <!-- Tabla comparativa (simulada) -->
            <div class="table-responsive mt-4">
                <table class="table table-bordered table-striped shadow-sm">
                    <thead class="table-info">
                        <tr>
                            <th>Parámetro</th>
                            <th>LOTE101</th>
                            <th>LOTE102</th>
                            <th>LOTE103</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>Proteína</td>
                            <td>68%</td>
                            <td>66%</td>
                            <td>69%</td>
                        </tr>
                        <tr>
                            <td>Humedad</td>
                            <td>6%</td>
                            <td>7%</td>
                            <td>5.5%</td>
                        </tr>
                        <tr>
                            <td>Metales pesados</td>
                            <td>No detectado</td>
                            <td>No detectado</td>
                            <td>Traza de plomo</td>
                        </tr>
                        <tr>
                            <td>Color y olor</td>
                            <td>Normal</td>
                            <td>Leve variación</td>
                            <td>Normal</td>
                        </tr>
                        <tr>
                            <td>Estado final</td>
                            <td><span class="badge bg-success">Aprobado</span></td>
                            <td><span class="badge bg-warning text-dark">Pendiente</span></td>
                            <td><span class="badge bg-success">Aprobado</span></td>
                        </tr>
                    </tbody>
                </table>
            </div>

            <!-- Comparación visual (opcional) -->
            <div class="mt-4">
                <button class="btn btn-outline-secondary">
                    <i class="fas fa-chart-bar"></i> Ver gráfico comparativo
                </button>
            </div>

        </div>
    </section>
</div>

<!-- FontAwesome para íconos -->
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet" />
