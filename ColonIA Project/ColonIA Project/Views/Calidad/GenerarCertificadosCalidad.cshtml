@{
    ViewBag.Title = "Generación de Certificados de Calidad";
}

<div class="inner">

    <!-- Header -->
    <header id="header">
        <a href="@Url.Action("Index", "Calidad")" class="icon solid fa-arrow-left">
        </a>
    </header>

    <!-- Sección para generación de certificados -->
    <section id="certificado-calidad">
        <div class="content">
            <header>
                <h1>Generación de Certificados de Calidad</h1>
                <p>Genera un certificado en PDF para lotes que cumplen con los estándares de calidad.</p>
            </header>

            <form method="post" class="mt-4">
                <div class="form-group">
                    <label for="codigoLote">Código del Lote:</label>
                    <input type="text" class="form-control" id="codigoLote" name="codigoLote" placeholder="Ej. LOTE789" required />
                </div>

                <div class="form-group mt-3">
                    <label for="fechaAnalisis">Fecha del Análisis:</label>
                    <input type="date" class="form-control" id="fechaAnalisis" name="fechaAnalisis" required />
                </div>

                <div class="form-group mt-3">
                    <label for="valoresObtenidos">Resumen de Valores Obtenidos:</label>
                    <textarea id="valoresObtenidos" name="valoresObtenidos" rows="4" placeholder="Ej. Proteína: 65%, Humedad: 8%, Metales: No detectados..." required></textarea>
                </div>

                <div class="form-group mt-3">
                    <label for="firmaEncargado">Firma Digital del Encargado:</label>
                    <input type="text" id="firmaEncargado" name="firmaEncargado" placeholder="Ej. Juan Pérez (Control de Calidad)" required />
                </div>

                <button type="submit" class="button primary large mt-4">
                    <i class="fas fa-file-pdf"></i> Generar Certificado PDF
                </button>
            </form>
        </div>
    </section>
</div>

<!-- FontAwesome -->
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
