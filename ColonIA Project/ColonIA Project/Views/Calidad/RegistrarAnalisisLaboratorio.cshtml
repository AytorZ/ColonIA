@{
    ViewBag.Title = "Registro de Análisis de Laboratorio";
}

<div class="inner">

    <!-- Header -->
    <header id="header">
        <a href="@Url.Action("Index", "Calidad")" class="btn btn-success mb-3">
            <i class="fas fa-arrow-left"></i> Volver
        </a>
    </header>

    <!-- Sección para análisis de laboratorio -->
    <section id="registro-analisis">
        <div class="content">
            <header>
                <h1>Registro de Análisis de Laboratorio</h1>
                <p>Registra los resultados del análisis de una muestra de harina.</p>
            </header>

            <form method="post" class="mt-4">
                <div class="form-group">
                    <label for="codigoLote">Código del Lote:</label>
                    <input type="text" class="form-control" id="codigoLote" name="codigoLote" placeholder="Ej. LOTE456" required />
                </div>

                <div class="form-group mt-3">
                    <label for="fechaAnalisis">Fecha del Análisis:</label>
                    <input type="date" class="form-control" id="fechaAnalisis" name="fechaAnalisis" required />
                </div>

                <div class="form-group mt-3">
                    <label for="proteina">Nivel de Proteína (%):</label>
                    <input type="number" step="0.01" class="form-control" id="proteina" name="proteina" required />
                </div>

                <div class="form-group mt-3">
                    <label for="humedad">Contenido de Humedad (%):</label>
                    <input type="number" step="0.01" class="form-control" id="humedad" name="humedad" required />
                </div>

                <div class="form-group mt-3">
                    <label for="metales">Presencia de Metales Pesados:</label>
                    <select class="form-control" id="metales" name="metales" required>
                        <option value="No">No</option>
                        <option value="Sí">Sí</option>
                    </select>
                </div>

                <div class="form-group mt-3">
                    <label for="otros">Otros Parámetros Nutricionales (opcional):</label>
                    <textarea class="form-control" id="otros" name="otros" rows="3" placeholder="Ej. Hierro: 12mg, Calcio: 30mg..."></textarea>
                </div>

                <button type="submit" class="btn btn-primary mt-4">Guardar Análisis</button>
            </form>
        </div>
    </section>
</div>

<!-- FontAwesome -->
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
