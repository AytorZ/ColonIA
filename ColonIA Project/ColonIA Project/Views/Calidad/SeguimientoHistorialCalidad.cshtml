@{
    ViewBag.Title = "Historial de Calidad";
}

<div class="inner">

    <!-- Botón de regreso -->
    <header id="header">
        <a href="@Url.Action("Index", "Calidad")" class="icon solid fa-arrow-left">
        </a>
    </header>

    <!-- Sección principal -->
    <section id="historial">
        <div class="content">
            <header>
                <h1>Historial de Calidad por Lote</h1>
                <p>Consulta detallada del seguimiento de calidad antes del envío o comercialización.</p>
            </header>

            <!-- Formulario de búsqueda -->
            <form class="row g-3 mb-4">
                <div class="col-md-6">
                    <label for="codigoLote" class="form-label">Código del Lote:</label>
                    <input type="text" class="form-control" id="codigoLote" name="codigoLote" placeholder="Ej. LOTE456" />
                </div>
                <div class="col-md-6 text-end d-flex align-items-end justify-content-end">
                    <button type="submit" class="button primary large mt-2">
                        <i class="fas fa-search"></i> Buscar
                    </button>
                </div>
            </form>

            <!-- Resultados del historial -->
            <div class="card shadow-sm mb-4">
                <div class="card-body">
                    <h5 class="card-title">Lote: LOTE456</h5>
                    <p><strong>Fecha de Inspección:</strong> 2025-04-06</p>
                    <p><strong>Responsable de la Inspección:</strong> Ing. Laura Martínez</p>
                    <p><strong>Control Visual:</strong> Color uniforme, textura seca, sin olores anómalos</p>

                    <h6 class="mt-3">Parámetros de Laboratorio:</h6>
                    <ul>
                        <li><strong>Proteína:</strong> 65%</li>
                        <li><strong>Humedad:</strong> 6.5%</li>
                        <li><strong>Microbiología:</strong> Aprobado</li>
                        <li><strong>Metales Pesados:</strong> No detectables</li>
                    </ul>

                    <p><strong>Observaciones:</strong> Lote cumple con todos los requisitos. Sin observaciones críticas.</p>
                    <p><strong>Estado Final del Lote:</strong> <span class="badge bg-success">Aprobado</span></p>

                    <p>
                        <strong>Certificado de Calidad:</strong>
                        <a href="#" class="btn btn-outline btn-sm"><i class="fas fa-file-pdf"></i> Ver Certificado</a>
                    </p>
                </div>
            </div>

            <!-- Puedes repetir bloques como este por cada lote consultado -->

        </div>
    </section>
</div>

