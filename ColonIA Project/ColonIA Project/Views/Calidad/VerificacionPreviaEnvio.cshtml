@{
    ViewBag.Title = "Verificación Previa al Envío";
}

<div class="inner">

    <!-- Botón de regreso -->
    <header id="header">
        <a href="@Url.Action("Index", "Calidad")" class="btn btn-success mb-3">
            <i class="fas fa-arrow-left"></i> Volver
        </a>
    </header>

    <!-- Sección principal -->
    <section id="verificacion">
        <div class="content">
            <header>
                <h1>Verificación Previa al Envío</h1>
                <p>Confirma si un lote cumple con los estándares de calidad antes de su despacho.</p>
            </header>

            <!-- Formulario de consulta -->
            <form class="row g-3 mb-4">
                <div class="col-md-6">
                    <label for="codigoLote" class="form-label">Código del Lote:</label>
                    <input type="text" class="form-control" id="codigoLote" name="codigoLote" placeholder="Ej. LOTE789" />
                </div>
                <div class="col-md-6 d-flex align-items-end justify-content-end">
                    <button type="submit" class="btn btn-primary mt-2">
                        <i class="fas fa-search"></i> Consultar Lote
                    </button>
                </div>
            </form>

            <!-- Resultados de verificación -->
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Resultado de la Verificación</h5>

                    <p><strong>Estado General del Lote:</strong> <span class="badge bg-success">Aprobado</span></p>

                    <ul>
                        <li><strong>Última Inspección:</strong> 2025-04-05</li>
                        <li><strong>Responsable:</strong> Ing. Carlos López</li>
                        <li><strong>Certificado de Calidad:</strong> Emitido</li>
                        <li><strong>Observaciones:</strong> Sin incidencias registradas</li>
                    </ul>

                    <div class="alert alert-success mt-3" role="alert">
                        ✅ Este lote cumple con todos los parámetros de calidad y está listo para ser enviado.
                    </div>
                </div>
            </div>

        </div>
    </section>
</div>

<!-- FontAwesome para íconos -->
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet" />
