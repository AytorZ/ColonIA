<!DOCTYPE HTML>
<html>
<head>
    <title>ColonIA - Recursos</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=no" />
    <link href="/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="/Assets/css/main.css" rel="stylesheet" />
    <link href="Assets/css/main.css" rel="stylesheet" />
</head>
<body class="is-preload">

    <div id="wrapper">

        <div id="main">

            <div class="inner">
                <header id="header" style="margin-bottom: 1cm;">
                    <a href='/' class="logo"><strong>ColonIA</strong> by iCricket</a>
                </header>
            </div>

            <div class="container mt-7">
                <h2 class="mb-5">Listado de recursos</h2>

                <div class="card shadow">
                    <div class="table-responsive">
                        <table class="table align-items-center table-flush">
                            <thead class="thead-light">
                                <tr>
                                    <th scope="col">Nombre de Recurso</th>
                                    <th scope="col">Descripción</th>
                                    <th scope="col">Cantidad</th>
                                    <th scope="col">Fecha de Adquisición</th>
                                    <th scope="col">Acciones</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>Recurso 1</td>
                                    <td>Descripción del Recurso 1</td>
                                    <td>20</td>
                                    <td>01/12/2024</td>
                                    <td class="text-right">
                                        <a href="#" data-toggle="modal" data-target="#editModal" class="text-primary mr-2">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a href="#" class="text-danger">
                                            <i class="fas fa-trash-alt"></i>
                                        </a>
                                    </td>
                                </tr>
                                <tr>
                                    <td>Recurso 2</td>
                                    <td>Descripción del Recurso 2</td>
                                    <td>50</td>
                                    <td>05/10/2024</td>
                                    <td class="text-right">
                                        <a href="#" data-toggle="modal" data-target="#editModal" class="text-primary mr-2">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a href="#" class="text-danger">
                                            <i class="fas fa-trash-alt"></i>
                                        </a>
                                    </td>
                                </tr>
                                <tr>
                                    <td>Recurso 3</td>
                                    <td>Descripción del Recurso 3</td>
                                    <td>100</td>
                                    <td>10/11/2024</td>
                                    <td class="text-right">
                                        <a href="#" data-toggle="modal" data-target="#editModal" class="text-primary mr-2">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a href="#" class="text-danger">
                                            <i class="fas fa-trash-alt"></i>
                                        </a>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                    <div class="card-footer py-4">
                        <div class="row">
                            <div class="col-md-6">
                                <a href=@Url.Action("CreacionRecurso","Inventario") class="btn btn-primary">Crear Recurso</a>
                            </div>
                            <div class="col-md-6">
                                <nav aria-label="...">
                                    <ul class="pagination justify-content-end mb-0">
                                        <li class="page-item disabled">
                                            <a class="page-link" href="#" tabindex="-1">
                                                <i class="fas fa-angle-left"></i>
                                                <span class="sr-only">Previous</span>
                                            </a>
                                        </li>
                                        <li class="page-item active">
                                            <a class="page-link" href="#">1</a>
                                        </li>
                                        <li class="page-item">
                                            <a class="page-link" href="#">2 <span class="sr-only">(current)</span></a>
                                        </li>
                                        <li class="page-item">
                                            <a class="page-link" href="#">3</a>
                                        </li>
                                        <li class="page-item">
                                            <a class="page-link" href="#">
                                                <i class="fas fa-angle-right"></i>
                                                <span class="sr-only">Next</span>
                                            </a>
                                        </li>
                                    </ul>
                                </nav>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="modal fade" id="editModal" tabindex="-1" role="dialog" aria-labelledby="editModalLabel" aria-hidden="true">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="editModalLabel">Editar Información del Recurso</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            <form>
                                <div class="form-group">
                                    <label for="resourceName">Nombre de Recurso</label>
                                    <input type="text" class="form-control" id="resourceName" value="">
                                </div>
                                <div class="form-group">
                                    <label for="resourceDescription">Descripción</label>
                                    <input type="text" class="form-control" id="resourceDescription" value="">
                                </div>
                                <div class="form-group">
                                    <label for="resourceQuantity">Cantidad</label>
                                    <input type="number" class="form-control" id="resourceQuantity" value="">
                                </div>
                                <div class="form-group">
                                    <label for="acquisitionDate">Fecha de Adquisición</label>
                                    <input type="date" class="form-control" id="acquisitionDate" value="">
                                </div>
                            </form>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn" data-dismiss="modal">Cerrar</button>
                            <button type="button" class="btn">Guardar Cambios</button>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>

    <script src="/Assets/js/jquery.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
