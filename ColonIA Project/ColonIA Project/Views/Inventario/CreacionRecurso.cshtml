
@{
    ViewBag.Title = "CreacionRecurso";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .card {
        border-radius: 10px;
        box-shadow: 0px 4px 15px rgba(0, 0, 0, 0.1);
    }

    .card-header {
        background-color: #007bff;
        color: #fff;
        text-align: center;
        padding: 20px;
        font-size: 1.5rem;
        border-top-left-radius: 10px;
        border-top-right-radius: 10px;
    }

    .form-group input, .form-group select {
        border-radius: 5px;
        border: 1px solid #ccc;
        padding: 10px;
        width: 100%;
        font-size: 1rem;
    }

        .form-group input:focus, .form-group select:focus {
            border-color: #007bff;
        }

    .btn-submit {
        background-color: white;
        color: #fff;
        border: none;
        padding: 12px 30px;
        font-size: 1.2rem;
        border-radius: 5px;
        cursor: pointer;
        transition: background-color 0.3s;
    }

        .btn-submit:hover {
            background-color: white;
        }

    .back-btn {
        color: #007bff;
        text-decoration: none;
        font-size: 1.1rem;
    }

        .back-btn:hover {
            text-decoration: underline;
        }
</style>
    

<div class="inner">
    <section style="justify-content: center">
        <div class="card" style="width: 500px;">
            <div class="card-header">
                <strong>Registro de Recursos</strong>
            </div>
            <div class="card-body">
                <a href="/Inventario/Recursos" class="back-btn">
                    <i class="fas fa-arrow-left"></i> Volver a Recursos
                </a>
                <hr>

                <h4 class="text-center mb-4">Ingresa los detalles del nuevo recurso</h4>

                <form id="resourceForm" method="post">
                    <div class="form-group mb-3">
                        <label for="resourceName">Nombre del Recurso</label>
                        <input type="text" id="resourceName" name="resourceName" class="form-control" placeholder="Nombre del recurso" required />
                    </div>

                    <div class="form-group mb-3">
                        <label for="resourceType">Tipo de Recurso</label>
                        <select id="resourceType" name="resourceType" class="form-control" required>
                            <option value="">Selecciona un tipo</option>
                            <option value="Material">Material</option>
                            <option value="Equipos">Equipos</option>
                            <option value="Herramientas">Herramientas</option>
                        </select>
                    </div>

                    <div class="form-group mb-3">
                        <label for="resourceQuantity">Cantidad</label>
                        <input type="number" id="resourceQuantity" name="resourceQuantity" class="form-control" placeholder="Cantidad disponible" required />
                    </div>

                    <div class="form-group mb-3">
                        <label for="resourcePrice">Precio por Unidad</label>
                        <input type="number" id="resourcePrice" name="resourcePrice" class="form-control" placeholder="Precio por unidad" required />
                    </div>

                    <div class="form-group mb-3">
                        <label for="resourceType">Categoria</label>
                        <select id="categoria" name="categoria" class="form-control" required>
                            <option value="">Selecciona una categoria</option>
                            <option value="Seguridad">Seguridad</option>
                            <option value="Herrramientas">Herramientas</option>
                            <option value="Materiales">Materiales</option>
                        </select>
                    </div>
                    <button type="submit" class="btn-submit btn-block">Registrar Recurso</button>
                </form>
            </div>
        </div>
    </section>
</div>

