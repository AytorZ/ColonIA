@{
    ViewBag.Title = "PerfilUsuario";
}

<div class="inner">

    <!-- Header -->
    <header id="header" style="margin-bottom: 1cm;">
        <a href="@Url.Action("Index", "Home")" class="logo"><strong>ColonIA</strong> by iCricket</a>
    </header>

    <div class="card" style="margin-bottom: 1cm;">
        <div class="card-body">
            <div class="d-flex flex-column align-items-center text-center">
                <img src="https://bootdey.com/img/Content/avatar/avatar7.png" alt="Admin" class="rounded-circle" width="150">
                <div class="mt-3">
                    <h4>Kenneth Valdez</h4>
                    <p class="text-secondary mb-1">Administrador Operario Supervisor</p>
                    <p class="text-muted font-size-sm">San José, Costa Rica</p>
                </div>
            </div>
        </div>
    </div>

    <div class="card mb-3" style="margin-bottom: 1cm;">
        <div class="card-body">
            <div class="row">
                <div class="col-sm-3">
                    <h6 class="mb-0">Nombre Completo</h6>
                </div>
                <div class="col-sm-9 text-secondary">
                    Kenneth Valdez
                </div>
            </div>
            <hr>
            <div class="row">
                <div class="col-sm-3">
                    <h6 class="mb-0">Correo Electrónico</h6>
                </div>
                <div class="col-sm-9 text-secondary">
                    fip@jukmuh.al
                </div>
            </div>
            <hr>
            <div class="row">
                <div class="col-sm-3">
                    <h6 class="mb-0">Phone</h6>
                </div>
                <div class="col-sm-9 text-secondary">
                    +506 8126-9029
                </div>
            </div>
            <hr>
            <div class="row">
                <div class="col-sm-3">
                    <h6 class="mb-0">Contraseña</h6>
                </div>
                <div class="col-sm-9 text-secondary">
                    **********************
                </div>
            </div>
            <hr>
            <div class="row">
                <div class="col-sm-3">
                    <h6 class="mb-0">Dirección</h6>
                </div>
                <div class="col-sm-9 text-secondary">
                    San José, Costa Rica
                </div>
            </div>
            <hr>
            <div class="row">
                <div class="col-sm-12">
                    
                    <button type="button" class="btn custom-blue text-white" data-toggle="modal" data-target="#editModal">
                        Editar
                    </button>
                </div>
            </div>
        </div>
    </div>

</div>

<!-- Modal de edición de perfil -->
<div class="modal fade" id="editModal" tabindex="-1" role="dialog" aria-labelledby="editModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="editModalLabel">Editar Información del Perfil</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                
                <form>
                    <div class="form-group">
                        <label for="fullName">Nombre Completo</label>
                        <input type="text" class="form-control" id="fullName" value="Kenneth Valdez">
                    </div>
                    <div class="form-group">
                        <label for="email">Correo Electrónico</label>
                        <input type="email" class="form-control" id="email" value="fip@jukmuh.al">
                    </div>
                    <div class="form-group">
                        <label for="phone">Teléfono</label>
                        <input type="text" class="form-control" id="phone" value="+506 8126-9029">
                    </div>
                    <div class="form-group">
                        <label for="password">Contraseña</label>
                        <input type="password" class="form-control" id="password" value="**************">
                    </div>
                    <div class="form-group">
                        <label for="address">Dirección</label>
                        <input type="text" class="form-control" id="address" value="San José, Costa Rica">
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary text-white" data-dismiss="modal">Cerrar</button>
                <button type="button" class="btn btn-secondary text-white">Guardar Cambios</button>
            </div>
        </div>
    </div>
</div>


<style>
    .custom-blue {
        background-color: #315098;
        border-color: #315098;
    }

        .custom-blue:hover {
            background-color: #00224d; 
            border-color: #00224d;
        }
</style>


<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
