@{
    ViewBag.Title = "CambiarPassword";
}

<div class="inner">

    <!-- Header -->
    <header id="header">
        <a href="@Url.Action("Index", "Home")" class="logo"><strong>ColonIA</strong> by iCricket</a>
    </header>

    <section class="vh-100 gradient-custom">
        <div class="container py-5 h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col-12 col-md-8 col-lg-6 col-xl-5">
                    <div class="card bg-dark text-white" style="border-radius: 1rem;">
                        <div class="card-body p-5 text-center">

                            <div class="mb-md-5 mt-md-4 pb-3">
                                <h2 class="fw-bold mb-2 text-uppercase" style="font-family: 'Roboto', sans-serif; font-size: 28px; color: #4CAF50;">Cambio de Contraseña</h2>
                                <p class="text-white-50 mb-5" style="font-family: 'Roboto', sans-serif; font-size: 20px;">¡Por favor ingresa tu nueva contraseña!</p>

                                <form id="changePasswordForm" method="post">



                                    <div class="mb-4">
                                        <input type="password" id="newPassword" name="newPassword" class="form-control form-control-lg" placeholder="Nueva contraseña" required />
                                    </div>

                                    <div class="mb-4">
                                        <input type="password" id="confirmNewPassword" name="confirmNewPassword" class="form-control form-control-lg" placeholder="Confirmar nueva contraseña" required />
                                    </div>

                                    <button class="btn btn-outline-light btn-lg px-5" type="submit">Cambiar Contraseña</button>
                                </form>

                                <div id="formMessage" class="text-white mt-3" style="display: none;"></div>

                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>