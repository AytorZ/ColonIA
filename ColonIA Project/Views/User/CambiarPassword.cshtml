<div class="inner">

        <!-- Header -->
        <header id="header">
            <a href="@Url.Action("Index", "Home")" class="logo"><strong>ColonIA</strong> by iCricket</a>
        </header>

        <section class="vh-100 gradient-custom">
            <div class="container py-5 h-100">
                <div class="row d-flex justify-content-center align-items-center h-100">
                    <div class="col-12 col-md-8 col-lg-6 col-xl-5">
                        <div class="card bg-dark text-white" style="border-radius: 1rem;">
                            <div class="card-body p-5 text-center">

                                <div class="mb-md-5 mt-md-4 pb-3">
                                    <h2 class="fw-bold mb-2 text-uppercase" style="font-family: 'Roboto', sans-serif; font-size: 28px; color: #4CAF50;">Reestablece tu contraseña</h2>
                                <p class="text-white-50 mb-5" style="font-family: 'Roboto', sans-serif; font-size: 20px;">Por favor ingrese su nueva contraseña a continuación</p>

                                    <form id="changePasswordForm" method="post">
                                        <div class="mb-4">
                                            <input type="password" name="nuevaContrasena" placeholder="Nueva contraseña" required class="form-control" />
                                        </div>
                                        <div class="mb-4">
                                        <input type="password" id="confirmNewPassword" name="confirmNewPassword" placeholder="Confirmar nueva contraseña" required class="form-control" />
                                        </div>
                                        <button type="submit" class="btn">Reestablecer Contraseña</button>
                                    </form>
                                    <div id="formMessage" class="text-black mt-3" style="display: none;"></div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script>
    document.addEventListener("DOMContentLoaded", function () {
        const form = document.getElementById("changePasswordForm");
        const passwordInput = form.querySelector('input[name="nuevaContrasena"]');
        const confirmInput = form.querySelector('input[name="confirmNewPassword"]');
        const messageDiv = document.getElementById("formMessage");

        form.addEventListener("submit", function (event) {
            event.preventDefault(); 

            if (passwordInput.value !== confirmInput.value) {
                messageDiv.style.display = "block";
                messageDiv.textContent = "Las contraseñas no coinciden.";
                messageDiv.classList.add("text-danger");
            } else {
                messageDiv.style.display = "none";
                messageDiv.textContent = "";
                messageDiv.classList.remove("text-danger");

                // SweetAlert
                Swal.fire({
                    title: 'Contraseña actualizada',
                    text: 'Tu contraseña ha sido actualizada correctamente.',
                    icon: 'success',
                    confirmButtonText: 'OK'
                }).then((result) => {
                    if (result.isConfirmed) {
                        form.submit();
                    }
                });
            }
        });
    });
</script>

