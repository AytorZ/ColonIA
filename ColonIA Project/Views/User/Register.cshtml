@model Usuario;
@{
    ViewBag.Title = "Register";
}

<div class="inner">

    <!-- Header -->
    <header id="header">
        <a href="@Url.Action("Index", "Home")" class="logo"><strong>ColonIA</strong> by iCricket</a>
        <ul class="icons">
            <li>
                <a href="@Url.Action("UsuariosAdmin", "User")" class="icon solid fa-arrow-left"></a>
            </li>
        </ul>
    </header>

    <!--Form de registro -->
    <section>
        <div class="box card">
            <form method="post" asp-controller="User" asp-action="Register">
                <div class="text-center">
                    <h2>Registro de Usuario</h2>
                    <p style="font-size: 20px">¡Por favor ingresa los datos del nuevo usuario!</p>
                </div>

                <div class="form-group mb-3">
                    <label>Nombre completo</label>
                    <input class="form-control" type="text" placeholder="Nombre completo" required asp-for="NombreCompleto" />
                </div>

                <div class="form-group mb-3">
                    <label>Correo electrónico</label>
                    <input class="form-control" type="email" placeholder="Correo electrónico" required asp-for="Correo" />
                </div>

                <div class="form-group mb-3">
                    <label>Rol</label>
                    <select class="form-control" required asp-for="IdRole">
                        <option value="" disabled selected>Selecciona un rol</option>
                        <option value="1">Administrador</option>
                        <option value="2">Supervisor</option>
                        <option value="3">Operador</option>
                    </select>
                </div>

                <div class="form-group mb-3">
                    <label>Contraseña</label>
                    <input class="form-control" asp-for="Contrasena" type="password" placeholder="Contraseña" required />
                </div>

                <div class="form-group mb-3">
                    <label>Confirmar contraseña</label>
                    <input class="form-control" asp-for="ConfirmacionContrasenna" type="password" placeholder="Confirmar contraseña" required />
                </div>

                <div class="form-group mb-3">
                    <input class="button primary fit" type="submit" value="Registrar">
                </div>
            </form>
        </div>
    </section>

</div>
