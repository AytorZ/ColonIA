@model Usuario
@{
    ViewBag.Title = "Login";
}


<div class="inner">

    <!-- Header -->
    <header id="header">
        <a href="@Url.Action("Index", "Home")" class="logo"><strong>ColonIA</strong> by iCricket</a>
    </header>

    <section>
        <div class="box card">
            <form asp-controller="User" asp-action="Login" method="post">
                @Html.AntiForgeryToken()
                <div class="text-center">
                    <h2 style="text-transform: uppercase;">Iniciar sesión</h2>
                    <p style="font-size: 20px;">¡Por favor ingresa tu correo electrónico y contraseña!</p>
                </div>
                <div class="form-group mb-3">
                    <input type="email" class="form-control-lg" placeholder="Correo" asp-for="Correo" />
                </div>
                <div class="form-group mb-3">
                    <input type="password" class="form-control-lg" placeholder="Contraseña" asp-for="Contrasena" />
                </div>
                <div class="text-center form-group mb-3">
                    <p><a data-bs-toggle="modal" data-bs-target="#forgotPasswordModal" style="cursor:pointer;">¿Olvidaste tu contraseña?</a></p>
                    <input class="button primary large fit" type="submit" />
                </div>
            </form>
        </div>
    </section>

</div>

<div class="modal fade" id="forgotPasswordModal">
    <div class="modal-dialog">
        <div class="box card modal-content">
            <div class="modal-header text-center">
                <h2>Recuperar Contraseña</h2>
            </div>

            <div class="modal-body">
                <div id="emailFormSection">
                    <p>Por favor, ingresa tu correo electrónico para recibir el código de verificación.</p>
                    <form id="emailForm">
                        <div class="mb-4">
                            <input type="email" id="email" name="correo" class="form-control" placeholder="Correo electrónico" required />
                        </div>
                        <div class="text-center">
                            <input class="button primary large" type="submit" value="Enviar Código" />
                        </div>
                    </form>
                    <div id="formMessage" class="text-white mt-3" style="display: none;"></div>
                </div>

                <div id="verificationFormSection" style="display: none;">
                    <p>Ingresa el código de verificación enviado a tu correo</p>
                    <form id="codeForm">
                        <div class="mb-4">
                            <input type="text" id="verificationCode" class="form-control" placeholder="Código de verificación" required />
                        </div>
                        <div class="text-center">
                            <input class="button primary large" type="submit" value="Verificar Código"/>
                        </div>
                    </form>
                    <div id="verificationMessage" class="text-black mt-3" style="display: none;"></div>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.min.js"></script>

@section Scripts {
    <script>
        document.getElementById('emailForm').addEventListener('submit', async function (e) {
            e.preventDefault();
            const email = document.getElementById('email').value;

            const formData = new FormData();
            formData.append('correo', email);

            const response = await fetch('/User/EnviarCodigo', {
                method: 'POST',
                body: formData
            });

            const result = await response.json();
            if (result.success) {
                document.getElementById('emailFormSection').style.display = 'none';
                document.getElementById('verificationFormSection').style.display = 'block';
            } else {
                const messageElem = document.getElementById('formMessage');
                messageElem.textContent = result.message;
                messageElem.style.display = 'block';
            }
        });
        document.getElementById('codeForm').addEventListener('submit', async function (e) {
            e.preventDefault();
            const email = document.getElementById('email').value;
            const code = document.getElementById('verificationCode').value;

            const response = await fetch('/User/VerificarCodigo', {
                method: 'POST',
        headers: { 'Content-Type': 'application/x-www-form-urlencoded' },
        body: new URLSearchParams({ correo: email, codigo: code })
                    });

            const result = await response.json();
            if (result.success) {
                window.location.href = '/User/CambiarPassword';
            } else {
                document.getElementById('verificationMessage').textContent = result.message;
                document.getElementById('verificationMessage').style.display = 'block';
            }
        });
    </script>
}
