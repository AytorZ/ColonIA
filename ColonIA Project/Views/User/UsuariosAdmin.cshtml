@model List<ColonIA.Models.Usuario>

@{
    ViewBag.Title = "UsuariosAdmin";
    var search = ViewBag.Search as string ?? string.Empty;
    int page = ViewBag.Page ?? 1;
    int totalPages = ViewBag.TotalPages ?? 1;
}

<div class="inner">
    <!-- Header -->
    <header id="header" style="margin-bottom: 1cm;">
        <a href='@Url.Action("Index", "Home")' class="logo"><strong>ColonIA</strong> by iCricket</a>
    </header>

    <div class="container mt-7">
        <h2 class="mb-5">Panel de Administración</h2>

        <div class="card shadow">
            <div class="table-responsive">
                <table class="table align-items-center table-flush">
                    <thead class="thead-light">
                        <tr>
                            <th scope="col">Nombre Completo</th>
                            <th scope="col">Correo</th>
                            <th scope="col">Teléfono</th>
                            <th scope="col">Rol</th>
                            <th scope="col">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var u in Model)
                        {
                            <tr>
                                <td>@u.NombreCompleto</td>
                                <td>@u.Correo</td>
                                <td>@u.Telefono</td>
                                <td>@u.IdRoleNavigation.NombreRole</td>
                                <td class="text-right">

                                    <button type="button" class="accion-icono" data-toggle="modal" data-target="#editModal-@u.IdUsuario">
                                        <i class="fas fa-edit"></i> Editar
                                </button>


                                    <form asp-action="EliminarUsuario" method="post" class="form-eliminar-usuario" style="display:inline;">
                                        <input type="hidden" name="id" value="@u.IdUsuario" />
                                        <button type="submit" class="accion-icono" data-nombre="@u.NombreCompleto" style="border: none; background: none; color: black;">
                                            <i class="fas fa-trash-alt"></i> Eliminar
                                        </button>
                                    </form>

                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <div class="card-footer py-4">
                <div class="row">
                    <div class="col-md-6">
                        <a href='@Url.Action("Register", "User")' class="btn btn-primary">Crear Usuario</a>
                    </div>
                    <div class="col-md-6">
                        <nav aria-label="...">
                            <ul class="pagination justify-content-end mb-0">
                                <li class="page-item @(page == 1 ? "disabled" : "")">
                                    <a class="page-link" href="@Url.Action("UsuariosAdmin", new { search, page = page - 1 })">
                                        <i class="fas fa-angle-left"></i>
                                    </a>
                                </li>
                                @for (int p = 1; p <= totalPages; p++)
                                {
                                    <li class="page-item @(p == page ? "active" : "")">
                                        <a class="page-link" href="@Url.Action("UsuariosAdmin", new { search, page = p })">@p</a>
                                    </li>
                                }
                                <li class="page-item @(page == totalPages ? "disabled" : "")">
                                    <a class="page-link" href="@Url.Action("UsuariosAdmin", new { search, page = page + 1 })">
                                        <i class="fas fa-angle-right"></i>
                                    </a>
                                </li>
                            </ul>
                        </nav>
                    </div>
                </div>
            </div>
        </div>
    </div>

   @foreach (var u in Model)
{
    <div class="modal fade" id="editModal-@u.IdUsuario" tabindex="-1" role="dialog" aria-labelledby="editModalLabel-@u.IdUsuario" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content box card">
                <div class="text-center mt-3">
                    <h2>Editar Usuario: @u.NombreCompleto</h2>
                </div>
                <form asp-action="EditarUsuario" method="post">
                    <input type="hidden" name="IdUsuario" value="@u.IdUsuario" />
                    
                    <div class="form-group mb-3 px-4">
                        <label>Nombre Completo</label>
                        <input type="text" class="form-control" name="NombreCompleto" value="@u.NombreCompleto" required>
                    </div>
                    <div class="form-group mb-3 px-4">
                        <label>Correo Electrónico</label>
                        <input type="email" class="form-control" name="Correo" value="@u.Correo" required>
                    </div>
                    <div class="form-group mb-3 px-4">
                        <label>Teléfono</label>
                        <input type="text" class="form-control" name="Telefono" value="@u.Telefono">
                    </div>
                    <div class="form-group mb-3 px-4">
                        <label>Dirección</label>
                        <input type="text" class="form-control" name="Direccion" value="@u.Direccion">
                    </div>
                    <div class="form-group mb-3 px-4">
                        <label>Rol</label>
                        <select class="form-control" name="IdRole">
                            <option value="1" selected="@(u.IdRole == 1 ? "selected" : null)">Administrador</option>
                            <option value="2" selected="@(u.IdRole == 2 ? "selected" : null)">Supervisor</option>
                            <option value="3" selected="@(u.IdRole == 3 ? "selected" : null)">Operador</option>
                        </select>
                    </div>
                    <div class="form-group mb-3 px-4">
                        <label>Contraseña (opcional)</label>
                        <input type="password" class="form-control" name="Contrasena" />
                    </div>

                    <div class="text-center pb-4">
                        <button type="button" class="button" data-dismiss="modal">Cerrar</button>
                        <button type="submit" class="button primary">Guardar Cambios</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
}

</div>

