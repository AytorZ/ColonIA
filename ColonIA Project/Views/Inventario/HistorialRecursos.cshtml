
    <style>
    h2 {
      color: #007b5f;
    }
    select, button {
      padding: 10px;
      margin: 10px 0;
    }
    .card {
      background-color: white;
      border-radius: 8px;
      box-shadow: 0 0 10px rgba(0,0,0,0.1);
      padding: 20px;
      margin-bottom: 20px;
    }
    table {
      width: 100%;
      border-collapse: collapse;
      margin-top: 15px;
    }
    table, th, td {
      border: 1px solid #ccc;
    }
    th, td {
      padding: 10px;
      text-align: left;
    }
    .alert {
      background-color: #fff3cd;
      border-left: 5px solid #ffc107;
    }

    .alerta-critica {
      background-color: #f8d7da !important;
      color: #721c24;
      font-weight: bold;
      border: 2px solid red !important;
      animation: parpadeo 1s infinite;
    }

    .badge-alerta {
      background-color: red;
      color: white;
      padding: 4px 8px;
      border-radius: 5px;
      font-size: 0.8em;
      font-weight: bold;
      margin-left: 10px;
    }
    
    </style>
    <div class="inner">
        <section>
            <header class="major">
                <div><strong>Panel de Recursos</strong></div>
            </header>

            <div class="container">
                <h2>Seleccionar Planta</h2>
                <select>
                    <option>Planta Norte</option>
                    <option>Planta Sur</option>
                    <option>Planta Este</option>
                </select>

                <div class="card">
                    <h2>Resumen de Recursos por Caja</h2>
                    <table id="tablaRecursos">
                        <tr>
                            <th>Caja</th>
                            <th>Recurso</th>
                            <th>Consumo</th>
                            <th>Rendimiento</th>
                        </tr>
                        <tr>
                            <td>Hábitat A</td>
                            <td>Agua</td>
                            <td>45 L</td>
                            <td>Aceptable</td>
                        </tr>
                        <tr>
                            <td>Hábitat B</td>
                            <td>Electricidad</td>
                            <td>120 kWh</td>
                            <td>⚠️ Bajo</td>
                        </tr>
                    </table>
                </div>

                <div class="card alert">
                    <h2>⚠️ Reporte de Anomalías</h2>
                    <table>
                        <tr>
                            <th>Hábitat</th>
                            <th>Recurso</th>
                            <th>Esperado</th>
                            <th>Actual</th>
                            <th>Acciones</th>
                        </tr>
                        <tr>
                            <td>Hábitat B</td>
                            <td>Electricidad</td>
                            <td>90 kWh</td>
                            <td>120 kWh</td>
                            <td><button class="button">Revisar</button></td>
                        </tr>
                    </table>
                </div>
            </div>
        </section>
    </div>

    <script>
        const tabla = document.getElementById('tablaRecursos');
        const filas = tabla.getElementsByTagName('tr');

        for (let i = 1; i < filas.length; i++) {
            const fila = filas[i];
            const rendimiento = fila.cells[3].innerText;

            if (rendimiento.includes("⚠️")) {
                fila.classList.add("alerta-critica");

                const badge = document.createElement("span");
                badge.className = "badge-alerta";
                badge.innerText = "¡Alerta!";
                fila.cells[1].appendChild(badge);
            }
        }
    </script>
