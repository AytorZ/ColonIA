@model ColonIA.Models.CreacionRecursoViewModel

@{

    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="inner">
    <header id="header">
        <a href="@Url.Action("Index", "Home")" class="logo"><strong>ColonIA</strong> by iCricket</a>
        <ul class="icons">
            <li>
                <a href="@Url.Action("UsuariosAdmin", "User")" class="icon solid fa-arrow-left"></a>
            </li>
        </ul>
    </header>

    <section>
        <div class="box card">
            <div class="text-center">
                <h2 style="color: #29a84f;">Registro de Recursos</h2>
                <h3 style="color: #e0e0e0;">Ingresa los detalles del nuevo recurso</h3>
            </div>

            <form method="post" asp-action="CreacionRecurso" asp-controller="Inventario">

                <div class="form-group mb-3">
                    <label>Nombre del Recurso</label>
                    <input asp-for="NuevoInventario.NombreDelActivo" type="text" class="form-control" placeholder="Nombre del recurso" required />
                </div>

                <div class="form-group mb-3">
                    <label>Categoria</label>
                    <select asp-for="NuevoInventario.IdCategoria" required>
                        <option value="" disabled selected>Selecciona una categoria</option>
                        @foreach(var categoria in Model.ListaCategorias){
                            <option value="@categoria.IdCategoria">@categoria.NombreCategoria</option>
                        }
                        
                    </select>
                </div>

                <div class="form-group mb-3">
                    <label for="resourceQuantity">Cantidad</label>
                    <input asp-for="NuevoInventario.CantidadActivo" type="number" class="form-control" placeholder="Cantidad disponible" required />
                </div>

                <div class="form-group mb-3 text-center">
                    <br/>
                    <input type="submit" class="button primary fit"/>
                </div>

            </form>

        </div>
    </section>
</div>